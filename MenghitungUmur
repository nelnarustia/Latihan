    public void hitung_umur() {
    String tanggal = jTextField_tgl_lahir.getText();              
    String hari_sekarang =  tanggal.substring(0,2);
    String bulan_sekarang =  tanggal.substring(3,5);
    String tahun_sekarang =  tanggal.substring(6);
     
    LocalDate hari_ini = LocalDate.now();
    LocalDate tgl_lahir = LocalDate.of(Integer.parseInt(tahun_sekarang), Integer.parseInt(bulan_sekarang), Integer.parseInt(hari_sekarang));
     
    int Total_tahun = Period.between(tgl_lahir, hari_ini).getYears();
    int Total_bulan = Period.between(tgl_lahir, hari_ini).getMonths();
    int Total_hari = Period.between(tgl_lahir, hari_ini).getDays();
     
    jTextField_tahun.setText(Integer.toString(Total_tahun)+"");
    jTextField_bulan.setText(Integer.toString(Total_bulan)+"");
    jTextField_hari.setText(Integer.toString(Total_hari)+"");
    }
