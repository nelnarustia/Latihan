    public void table(){
        DefaultTableModel tblakun = new DefaultTableModel();
        tblakun.addColumn("Nama");
        tblakun.addColumn("Username");
        tblakun.addColumn("Password");
        tblakun.addColumn("Url/Aplikasi/Website");

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            con=DriverManager.getConnection("jdbc:mysql://localhost/tubes2","root","");
            st=con.createStatement();
            rs= st.executeQuery("SELECT * FROM akun");
            while (rs.next())
                tblakun.addRow(new Object[]{
                    rs.getString("Nama"),
                    rs.getString("Username"),
                    rs.getString("Password"),
                    rs.getString("Url/Aplikasi/Website")
                });
            tblakunn.setModel(tblakun);
            tblakunn.enable(false);
            {
                
            }
        } catch (Exception ex) {

        }
    }
    void hapus(){
        nmakun.setText("");
        usrnm.setText("");
        pss.setText("");
        url.setText("");
    }
