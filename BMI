    private void hitungActionPerformed(java.awt.event.ActionEvent evt) {                                       
        double tb = Double.parseDouble(jTextFieldTB.getText());
        double bb = Double.parseDouble(jTextFieldBB.getText());
        
        double bmi = bb / (tb*tb);
        
        String hitung = String.format("%.2f", bmi);
        jTextFieldBMI.setText(hitung);
        
        if (bmi <=18.5){
            jTextFieldBMI.setOpaque(true);
            jTextFieldBMI.setBackground(Color.black);
            jLabel8.setForeground(Color.BLACK);
            jLabel8.setText(" Berat Badan Kurang ");
        }
        
        else if (bmi <=24.5){
            jTextFieldBMI.setOpaque(true);
            jTextFieldBMI.setBackground(Color.green);
            jLabel8.setForeground(Color.green);
            jLabel8.setText(" Berat Badan Normal ");
        }
        
        else if (bmi <=29.5){
            jTextFieldBMI.setOpaque(true);
            jTextFieldBMI.setBackground(Color.orange);
            jLabel8.setForeground(Color.orange);
            jLabel8.setText(" Berat Badan Obesitas Ringan ");
        }
        
        else if (bmi >= 30){
            jTextFieldBMI.setOpaque(true);
            jTextFieldBMI.setBackground(Color.red);
            jLabel8.setForeground(Color.red);
            jLabel8.setText(" Berat Badan Obesitas Berat ");
        }
        
        
        
    }                                      

