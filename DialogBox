    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        JOptionPane.showMessageDialog(this,"Hello Everyone, Happy Nice Day","Message",JOptionPane.INFORMATION_MESSAGE);
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int confirm = JOptionPane.showConfirmDialog(this, "Apa Hari Ini Menyenangkan ?");
        
        if(confirm == 0){
            JOptionPane.showMessageDialog(this,"Senang Mendengarnya");
        }else{
            JOptionPane.showMessageDialog (this,"Semoga hari Besok Menyenangkan");
        }
     
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String input = JOptionPane.showInputDialog(this, " Masukkan Angka Ganjil Yang Anda Suka :");
        JOptionPane.showMessageDialog (this, "Angka Ganjil Yang Anda Suka Adalah "+input);
    }                                        

